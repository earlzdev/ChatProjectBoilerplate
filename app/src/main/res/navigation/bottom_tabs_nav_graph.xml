<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_tabs_nav_graph"
    app:startDestination="@id/chatFragment">

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.earl.chatprojectboilerplate.presentation.chat.ChatFragment"
        tools:layout="@layout/fragment_chat"
        android:label="ChatFragment" >
        <action
            android:id="@+id/action_chatFragment_to_messagingFragment"
            app:destination="@id/messagingFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        tools:layout="@layout/fragment_profile"
        android:name="com.earl.chatprojectboilerplate.presentation.profile.ProfileFragment"
        android:label="ProfileFragment" />
    <fragment
        android:id="@+id/messagingFragment"
        android:name="com.earl.chatprojectboilerplate.presentation.chat.MessagingFragment"
        tools:layout="@layout/fragment_messaging"
        android:label="MessagingFragment" />

</navigation>